sow-release:
  template: 'default'
  base_definition:
    traits:
      version:
        preprocess: 'finalize'
        inject_effective_version: true
      publish:
        dockerimages:
          sow:
            dockerfile: 'docker/Dockerfile'
            image: 'eu.gcr.io/gardener-project/sow'
            tag_as_latest: true
    repo:
      trigger: false
    steps: ~
  jobs:
    minor-release:
      traits:
        release:
          nextversion: 'bump_minor'
    patch-release:
      traits:
        release:
          nextversion: 'bump_patch'
    dev-image:
      traits:
        version:
          preprocess: 'noop'
      repo:
        trigger: true
